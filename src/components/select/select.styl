/* Base */
.select {
    position: relative;
    display: block;
    width: 100%;
}

.select-label {
    display: block;
    width: 100%;
    font-size: 14px;
    font-weight: $medium;
    margin-bottom: 8px;
}

.select-input {
    display: block;
    width: 100%;
    color: inherit;
    font-family: inherit;
    font-size: 16px;
    line-height: 20px;
    padding: 12px 48px 12px 16px;
    border: 2px solid $gray;
    border-radius: 2px;
    cursor: inherit;
    background: none;
    background-repeat: no-repeat;
    background-image: url('data:image/png;base64,');
    background-size: 24px 24px;
    background-position: right 12px center;

    // Reset default select attributes
    appearance: none;
    // Hack for IE10+ to remove the default select arrow they add
    &::-ms-expand {
        display: none;
    }
}

/* Disabled styles */
.select[disabled],
.select[disabled] * {
  cursor: not-allowed !important;
  opacity: 0.65;
}

.select[disabled] .select-input {
  background: lighten($gray, 80%);
}

/* Focus styles */
.select-input:focus {
  outline: none; // Disable default focus glow
  border-color: $primary;
  box-shadow: 0px 0px 0px 2px rgba($primary, 0.5);
}
