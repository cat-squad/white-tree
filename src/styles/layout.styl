body {
  background: url('./assets/background.jpg') no-repeat;
  background-size: cover;
  background-position: center center;
  background-attachment: fixed;
}

#root {
  background: rgba(0,0,0,0.6);
}

#root,
#root > div {
  min-height: 100vh;
}

.logo {
  display: block;
  user-select: none;
}


.container {
    width: 100%;
    max-width: $desktop;
    margin: 0 auto;
    padding: 8px;

    @media (min-width: $tablet-landscape) {
        padding: 16px;
    }
}

.character {
    width: 100%;
    margin: 0;
    padding: 0;
    background: rgba(0,0,0,0.5);
    border: 4px solid $white;
}

.character-background {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;

    > * {
        width: 33.333333%;
        padding: 24px;
        border: 4px solid $white;

        > * + * {
            margin-top: 24px;
        }
    }
}

.character-stats {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;

    > * {
        width: 25%;
        padding: 24px;
        border: 4px solid $white;

        > * + * {
            margin-top: 24px;
        }
    }
}

hr {
    width: 100%;
    height: 1px;
    background: $white;
    border: none;
    margin: 32px auto;
}

img {
    display: inline-block;
    max-width: 100%;
}
