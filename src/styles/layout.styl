body {
  background: url('./assets/background.jpg') no-repeat;
  background-size: cover;
  background-position: center center;
  background-attachment: fixed;
}

#root {
  background: rgba(0,0,0,0.6);
}

#root,
#root > div {
  min-height: 100vh;
}

.logo {
  display: block;
  user-select: none;
}


.container {
    width: 100%;
    max-width: $desktop;
    margin: 0 auto;
    padding: 8px;

    @media (min-width: $tablet-landscape) {
        padding: 16px;
    }
}

.character {
    width: 100%;
    margin: 0;
    padding: 0;
    background: rgba(0,0,0,0.5);
    border: 4px solid $white;
    border-bottom-left-radius: 8px;
    border-bottom-right-radius: 8px;
}

.character-background {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;

    > * {
        width: 100%;
        padding: 24px 12px;
        border: 2px solid $white;

        > * + * {
            margin-top: 12px;
        }
    }

    @media (min-width: $tablet-portrait) {
        > * {
            padding: 32px 16px;
            border: 4px solid $white;

            > * + * {
                margin-top: 16px;
            }
        }
    }


    @media (min-width: $tablet-landscape) {
        > * {
            width: 33.3333%;
            padding: 48px 24px;
            border: 6px solid $white;

            > * + * {
                margin-top: 24px;
            }
        }
    }
}

.character-stats {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;

    > * {
        width: 100%;
        padding: 24px 12px;
        border: 2px solid $white;

        > * + * {
            margin-top: 12px;
        }
    }

    @media (min-width: $tablet-portrait) {
        > * {
            width: 50%;
            padding: 32px 16px;
            border: 4px solid $white;

            > * + * {
                margin-top: 16px;
            }
        }
    }

    @media (min-width: $tablet-landscape) {
        > * {
            width: 25%;
            padding: 48px 24px;
            border: 6px solid $white;

            > * + * {
                margin-top: 24px;
            }
        }
    }
}

hr {
    width: 100%;
    height: 1px;
    background: $white;
    border: none;
    margin: 32px auto;
}

img {
    display: inline-block;
    max-width: 100%;
}
